<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_2_layout_1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:layout_marginTop="3dp"
    android:background="@drawable/button_layout"
    android:minHeight="130dp"
    android:padding="5dp">


    <TextView
        android:id="@+id/activity_2_textView_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:hint="@string/description_task_item"
        android:padding="5dp"
        android:paddingStart="5dp"
        android:textColor="@color/white_hint"
        android:textColorHint="@color/white_hint"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/activity_2_divider_1"
        app:layout_constraintStart_toStartOf="@+id/activity_2_divider_1"
        app:layout_constraintTop_toBottomOf="@+id/activity_2_divider_1"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/activity_2_textView_1"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="start"
        android:hint="@string/title_task_item"
        android:padding="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="@color/white_hint"
        android:textColorHint="@color/white_hint"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.311"
        app:layout_constraintStart_toEndOf="@+id/activity_2_textView_3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/activity_2_divider_1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/activity_2_textView_1"
        app:layout_constraintStart_toStartOf="@+id/activity_2_textView_1"
        app:layout_constraintTop_toBottomOf="@+id/activity_2_textView_1"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/activity_2_textView_3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/circle"
        android:backgroundTint="#FF0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>